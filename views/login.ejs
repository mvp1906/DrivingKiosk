<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/header'); -%>
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('assets/img/contact-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="page-heading">
                            <h1>!! Login & Sign-Up!!</h1>
                            <span class="subheading">Try our Kiosk</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <main class="mb-4">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <h2>Already a User !! Log In Here !!</h2>
                        <div class="my-5">
                            <form id="contactForm" method="post" action="/auth/login">
                                <div class="form-floating">
                                    <input class="form-control" id="name" type="text" name="username" placeholder="Enter your User name..." data-sb-validations="required" />
                                    <label for="name">User Name</label>
                                    <div class="invalid-feedback" data-sb-feedback="name:required">A User name is required.</div>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="password" type="password" name="password" placeholder="Enter your password..." data-sb-validations="required,password" />
                                    <label for="password">Password</label>
                                    <div class="invalid-feedback" data-sb-feedback="password:required">A password is required.</div>
                                </div>
                                <br />
                                <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">Login</button>
                                <br />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <h2>New User !! Sign Up Here !!</h2>
                        <div class="my-5">
                            <% if(typeof errors!='undefined' && errors!=null && errors.length>0){ %>
                                <ul>
                                    <li style="color: red;"><h2><%= errors %></h2></li>
                                </ul>
                            <% } %>
                            <form id="contactForm" method="post" action="/auth/signup" >
                                <div class="form-floating" >
                                    <input class="form-control" id="name" type="text" name="username" placeholder="Enter your User name..." data-sb-validations="required" />
                                    <label for="name">User Name</label>
                                    <div class="invalid-feedback" data-sb-feedback="name:required">A User name is required.</div>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="password" type="password" name="password" placeholder="Enter your password..." data-sb-validations="required,password" />
                                    <label for="password">Password</label>
                                    <div class="invalid-feedback" data-sb-feedback="password:required">A password is required.</div>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="repeatPassword" type="password" name="repeatPassword" placeholder="Enter your password again..." data-sb-validations="required,password" />
                                    <label for="repeatPassword">Password</label>
                                    <div class="invalid-feedback" data-sb-feedback="password:required">Confirm the password</div>
                                </div>
                                <div class="form-floating">
                                    <select class="form-control" name="userType" id="userType" data-sb-validations="required">
                                        <option value="" disabled selected>Select User Type</option>
                                        <option value="Driver">Driver</option>
                                        <option value="Examiner">Examiner</option>
                                        <option value="Admin">Admin</option>
                                    </select>
                                    <label for="userType">User Type</label>
                                    <div class="invalid-feedback" data-sb-feedback="userType:required">A User type is required.</div>
                                </div>
                                <br />
                                <div class="d-none" id="submitErrorMessage"><div class="text-center text-danger mb-3">Error sending message!</div></div>
                                <!-- Submit Button-->
                                <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">Sign Up</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <<!-- Footer-->
        <%- include('layouts/footer'); -%>
        <!-- Scripts -->
        <%- include('layouts/scripts'); -%>
    </body>
</html>
